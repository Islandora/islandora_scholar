              vendor-version="1.0.19" />
      <exslt:implementation src="math.exp.msxsl.xsl" language="exslt:msxsl" version="1"/>
      <exslt:implementation src="math.exp.js" language="exslt:javascript" version="1"/>
   </exslt:implementations>
